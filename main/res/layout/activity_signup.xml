<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/logodottheme">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Sign up"
            android:textColor="#6C6C6C"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:textStyle="bold"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/ic_account_circle_30dp"
            android:hint="Email"
            android:textSize="16dp"
            android:textColorHint="#6c6c6c"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="340dp"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/ic_lock_30dp"
            android:hint="Password"
            android:textSize="16dp"
            android:textColorHint="#6c6c6c"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/ic_lock_30dp"
            android:hint="VerifiyPassword"
            android:textSize="16dp"
            android:textColorHint="#6c6c6c"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_signup"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Sign Up"
            android:textSize="18sp"
            android:background="@drawable/button_radius"
            android:textColor="#fff"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="500dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/btn_signin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sign In"
            android:textSize="18sp"
            android:textColor="#21B1F3"
            android:gravity="center"
            android:layout_marginTop="550dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:textSize="18sp"
            android:textColor="#e3b86c"
            android:textStyle="bold"
            android:layout_marginTop="600dp"
            android:layout_marginLeft="130dp"
            />
    </LinearLayout>
</RelativeLayout>
